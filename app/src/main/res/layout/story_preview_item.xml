<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/cardLayer2"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="4dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardLayer1"
        app:layout_constraintEnd_toEndOf="@+id/cardLayer1"
        app:layout_constraintStart_toStartOf="@+id/cardLayer1"
        app:layout_constraintTop_toBottomOf="@+id/cardLayer1" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardLayer1"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="4dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="0dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/gifCard"
        app:layout_constraintEnd_toEndOf="@+id/gifCard"
        app:layout_constraintStart_toStartOf="@+id/gifCard"
        app:layout_constraintTop_toBottomOf="@+id/gifCard">

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/gifCard"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/storyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="4dp"
            android:text="Just Now"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:textStyle="bold" />

        <com.hold1.bubblegum.BubbleView
            android:id="@+id/storyGradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            app:bbAngle="90" />

        <android.support.v7.widget.CardView
            android:id="@+id/userAvatarContainer"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_margin="4dp"
            android:visibility="gone"
            app:cardCornerRadius="0dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/userAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/storyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="An Obe the BubbleHead"
            android:textSize="17dp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>